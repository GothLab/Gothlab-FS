                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>FontShaper</Menu>
                    <Geometry>
                        <Size>
                            <Height>600</Height>
                            <Width>1200</Width>
                        </Size>
               
                    </Geometry>
